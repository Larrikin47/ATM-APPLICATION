<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".activities.WithdrawalActivity">

    <TextView
        android:id="@+id/textViewCurrentBalanceWithdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_balance"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editTextWithdrawalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_withdrawal_amount"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonConfirmWithdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_withdrawal"/>

    <Button
        android:id="@+id/buttonBackToMainFromWithdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_main"
        android:layout_marginTop="10dp"/>

</LinearLayout>